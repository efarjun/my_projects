# Some flags are optional

# Use the following at the end of some of the commands to create manifest file without creating the actual resource:
# "--dry-run=client -o yaml > clusterrole.yaml"

kubectl create deployment test-deployment --image nginx --replicas 3 --port 80

# Create a name space:
kubectl create namespace app

# Create a pod:
kubectl run test-pod --image nginx:1.21.1 --port 80 --serviceaccount api-access --restart=Never -n apps

# Create a nodeport service:
kubectl create svc nodeport node-port-svc --tcp=8080:80 

# Create a service account:
kubectlcreate serviceaccount test-service-account

# Create a cluster role:
kubectl create clusterrole api-clusterrole --verb=watch,list,get --resource=pods

# Create cluster role binding:
kubectl create clusterrolebinding api-clusterrolebinding --serviceaccount=apps:test-service-account --clusterrole=api-clusterrole
